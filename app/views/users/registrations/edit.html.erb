<div class="slab">
  <div class="grid">
    <div class="grid__item width-one-half">
      <div class="form-card form-card--compact">
        <div class="form-card__header">
          <h1 class="form-card__title"><%= t('views.users.registrations.edit.settings.title') %></h1>
        </div>
        <div class="form-card__content">
          <%= form_for(resource, as: resource_name, url: user_registration_path, html: { method: :patch }, builder: GcfFormBuilder) do |f| %>
            <%= f.gcf_input_field :full_name, t('activemodel.forms.models.user.attributes.full_name'), autofocus: true %>
            <%= f.gcf_input_field :email, t('activemodel.forms.models.user.attributes.email') %>
            <%= f.gcf_input_field :phone_number, t('activemodel.forms.models.user.attributes.phone_number'), notes: ["If a client tries to call your ClientComm number, we'll redirect the calls to this number."] %>
            <div class="form-card__footer">
              <div class="toolbar">
                <div class="toolbar__left"><%= f.submit t('views.users.registrations.edit.settings.submit'), class: 'button button--cta', role: 'button', name: 'update_settings' %></div>
                <div class="toolbar__right-responsive">
                  <%= link_to t('views.shared.cancel'), :back, class: "button" %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="grid__item width-one-half">
      <div class="form-card form-card--compact">
        <div class="form-card__header">
          <h1 class="form-card__title"><%= t('views.users.registrations.edit.password.title') %></h1>
        </div>
        <div class="form-card__content">
          <%= form_for(resource, as: resource_name, url: user_registration_path, html: { method: :patch }, builder: GcfFormBuilder) do |f| %>
            <%= f.gcf_input_field(:current_password, t('activemodel.forms.models.user.attributes.current_password'), type: "password") %>
            <%= f.gcf_input_field(:password, t('activemodel.forms.models.user.attributes.password'), type: "password", notes: "This should be at least 6 characters.") %>
            <%= f.gcf_input_field(:password_confirmation, t('activemodel.forms.models.user.attributes.password_confirmation'), type: "password") %>
            <div class="form-card__footer">
              <div class="toolbar">
                <div class="toolbar__left"><%= f.submit t('views.users.registrations.edit.password.submit'), class: 'button button--cta', role: 'button', name: 'change_password' %></div>
                <div class="toolbar__right-responsive">
                  <%= link_to t('views.shared.cancel'), :back, class: "button" %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
