<div class="modal" id="scheduled-list-modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <a href="<%= templates_path %>" class="close no-underline" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></a>
        <h2 class="form-card__title" id="myModalLabel"><%= t('views.templates.edit.modal.title') %></h2>
      </div>

      <%= form_for @template, builder: GcfFormBuilder do |f| %>
        <div class="modal-body">
            <div class="form-card__content">
                <div class="grid">
                  <div class="form-group <%= 'form-group--error-modal' if @template.errors.any? %>">
                    <div class="grid__item">
                      <%= f.gcf_input_field :title, t('views.templates.edit.form.title.label') %>
                    </div>
                  </div>
                  <div class="form-group <%= 'form-group--error-modal' if @template.errors.any? %>">
                    <div class="grid__item">
                      <%= f.gcf_textarea :body, t('views.templates.edit.form.body.label'), classes: ['edit-template-textarea'] %>
                    </div>
                  </div>
              </div>
            </div>
        </div>
        <div class="modal-footer">
          <div class="toolbar">
            <div class="toolbar__left">
              <%= f.submit t('views.templates.edit.form.submit'),
                  class: 'button button--primary',
                  role: 'button' %>
            </div>
            <div class="toolbar__left">
              <%= link_to t('views.templates.edit.form.delete'),
                  template_path(@template),
                  data: { confirm: t('views.templates.edit.form.delete_confirmation')},
                  method: :delete,
                  class: 'button button--danger',
                  role: 'button' %>
            </div>
            <div class="toolbar__right">
              <div class="toolbar__right-responsive">
                <button type="button" class="button toolbar__item" data-dismiss="modal"><%= t('views.shared.cancel') %></button>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
