<section class="slab slab--padded" id="scroller-target">
  <div class="grid">
    <div class="grid__item width-two-thirds shift-one-sixth">
      <div class="media-box--bleed media-box">
        <div class="media-box__content">

          <div class="toolbar-responsive with-padding-med">
            <div class="toolbar__left-responsive">
              <h1>My templates</h1>
            </div>
            <div class="toolbar__right-responsive">
              <%= link_to new_template_path, class: "button button--small button--cta" do %>
                <i class="button__icon--left icon-add"></i> New template
              <% end %>
            </div>
          </div>
            <% if @templates.empty? %>
              <div class="text-center col-md-8 col-md-offset-2">
                <%= image_tag('empty_templates.png') %>
                <p>Find yourself writing the same text over and over? Make a template!</p>
              </div>
            <% else %>
              <table class="data-table data-table--selectable">
                <thead>
                  <tr>
                    <th class="sort" data-sort="lastname">
                      Title
                    </th>
                    <th class="sort desc" data-sort="timestamp">
                      Body
                    </th>
                    <th class="hidden-xs">Edit</th>
                  </tr>
                </thead>
                <tbody id="client-rows" class="list">
                  <% @templates.each do |template| %>
                    <tr id="<%= dom_id(template) %>">
                      <td>
                        <a class="cell-content" href="<%= edit_template_path(template) %>">
                          <strong><%= template.title %></strong>
                        </a>
                      </td>
                      <td>
                        <a class="cell-content" href="<%= edit_template_path(template) %>">
                          <%= template.body %>
                        </a>
                      </td>
                      <td class="hidden-xs">
                        <a class="cell-content" href="<%= edit_template_path(template) %>">
                          <i class="icon-mode_edit"></i>
                        </a>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            <% end %>
          </div>
        </div>
      </div>
    </div>
</section>
