<div class="form--client form-card form-card--compact">
  <div class="form-card__header">
    <h1 class="form-card__title"><%= form_title %></h1>
  </div>
  <div class="form-card__content">

    <% has_other_users = @client_form.other_users.any? %>
    <% if has_other_users %>
      <div class="notice">
        <div class="media">
          <div class="media-left media-middle">
            <i class="media-object icon-link_in_circle orange"></i>
          </div>
          <div class="media-body">
            <p>
              This client is also assigned to
              <strong><%= @client_form.other_users.pluck(:full_name).to_sentence %></strong>.
              Changing the client's name or phone number will change it for everyone.
            </p>
          </div>
        </div>
      </div>
    <% end %>

    <%= form_for @client_form, url: clients_path, builder: GcfFormBuilder do |f| %>
      <%= f.gcf_input_field :first_name, "First name", classes: ['form-width--name'], icon: ('link' if has_other_users) %>
      <%= f.gcf_input_field :last_name, "Last name", classes: ['form-width--name'], icon: ('link' if has_other_users) %>

      <%= f.gcf_input_field :phone_number, "Phone number", notes: ['example: 2435551212'], classes: ['form-width--med'], icon: ('link' if has_other_users), :options => { :value => phone_number_display(@client_form.phone_number) } %>
      <% if feature_flag_for('client_id_number') %>
        <%= f.gcf_input_field :id_number, "ID number", notes: ['Opts your client into automatic court reminders, if information is available'], classes: ['form-width--med'], icon: ('link' if has_other_users), :options => { :value => @client_form.id_number } %>
      <% end %>

      <% if feature_flag_for('court_dates') %>
        <%
           next_court_date_at = ''
           if @client_form.next_court_date_at.present?
             next_court_date_at = @client_form.next_court_date_at.strftime('%m/%d/%Y')
           end
        %>
        <%= f.gcf_input_field :next_court_date_at, "Court date (optional)", classes: ['form-width--date'], options: { value: next_court_date_at } %>
      <% end %>

      <% if current_user.department.client_statuses? %>
        <%= f.gcf_radio_set :client_status_id, "Client status", current_user.department.client_statuses.map {|status| {value: status.id, label: status.name, notes: status.followup_date}} %>
      <% end %>

      <% unless feature_flag_for('hide_notes') %>
        <%= f.gcf_input_field :notes, 'Notes', notes: "Add a private note that will appear in this client's profile", classes: ['form-width--long'] %>
      <% else %>
        <%= f.hidden_field :notes %>
      <% end %>

      <div class="form-card__footer">
        <div class="toolbar">
          <div class="toolbar__left"><%= f.submit save_text, class: 'button button--cta', role: 'button' %></div>
          <div class="toolbar__right">
            <%= link_to clients_path, class: "button" do %>
              Cancel
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
