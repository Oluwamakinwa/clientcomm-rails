<tbody id="client-rows" class="list">
<% @clients.each do |client| %>
  <tr id="<%= dom_id(client) %>" class="<%= client_messages_status(client) %>">
    <td class="lastname fullname" data-href="<%= client_messages_path(client.id) %>" data-lastname="<%= client.last_name %>" data-fullname="<%= client.full_name %>">
      <% if client_messages_status(client) == 'unread' %>
        <i class="message-status-icon hidden-xs"></i>
      <% elsif client_messages_status(client) == 'error' %>
        <i class="icon-warning hidden-xs"></i>
      <% end %>
      <%= client.full_name %>
    </td>
    <td class="timestamp" data-href="<%= client_messages_path(client.id) %>" data-timestamp="<%= client.last_contacted_at.to_time.to_i %>">
      <%= time_ago_in_words(client.last_contacted_at) %>
    </td>
    <td class="hidden-xs" data-href="<%= edit_client_path(client.id) %>">Manage</td>
  </tr>
<% end %>
</tbody>
